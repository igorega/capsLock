head
	// base meta
	meta(charset='utf-8')
	meta(http-equiv='x-ua-compatible', content='ie=edge')
	meta(name='viewport', content='width=device-width, initial-scale=1.0')
	meta(name='author', content='igorega@gmail.com')
	meta(name='description', content='HTML/CSS Developer Position at CapsLock')
	meta(name='keywords', content='HTML/CSS Developer Position at CapsLock')

	// disable link highlighting upon tap
	meta(name='msapplication-tap-highlight', content='no')

	// theme Color for Chrome, Firefox OS and Opera
	meta(name='theme-color', content='#111')

	// title
	title #{title}

	// favicon
	// link(rel='icon', type='image/png', href='img/favicon.png')

	// empty favicon
	link(rel='icon' href='data:,')

	// preloader style
	style.
		body::before{content:'';z-index:99999;position:fixed;inset:0;width:100%;height:100%;-webkit-backdrop-filter:blur(12px);backdrop-filter:blur(12px);pointer-events:none;transition:-webkit-backdrop-filter 0.5s;transition:backdrop-filter 0.5s;transition:backdrop-filter 0.5s,-webkit-backdrop-filter 0.5s;}
		body.is-loaded::before{-webkit-backdrop-filter:none;backdrop-filter:none;}

	// css
	link(rel='stylesheet', href='css/main.css')

	// preloader script
	script.
		document.fonts.ready.then(() => setTimeout(() => document.body.classList.add('is-loaded'), 500));